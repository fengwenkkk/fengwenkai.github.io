# Makefile

TOP_DIR=$(PWD)

export TOP_DIR

include $(TOP_DIR)/Rules.mak

EXE=$(TOP_DIR)/bin/procmon

all: subdirs $(EXE)

INC_FLAG = $(CC_PUB_INC) \
		-I./ds_public 

EXTRA_CFLAGS := $(INC_FLAG)
EXTRA_LDFLAGS :=

DIRS = gos gplat 

DS_LIBS = $(TOP_DIR)/lib/gplat.a \
		$(TOP_DIR)/lib/gos.a \
		tool/procmon/procfunc.o \
		tool/procmon/procmon.o

LIBS += $(DS_LIBS)

SRCS := tool/procmon/procfunc.cpp tool/procmon/procmon.cpp

#COBJS=$(patsubst %.c,%.o)
CPPOBJS=$(patsubst %.cpp,%.o,$(SRCS))

$(EXE) : $(COBJS) $(CPPOBJS) $(LIBS)
	$(GCC) $(INC_FLAG) $(LDFLAGS) $(CPPOBJS) -Xlinker "-(" $(LIBS) -Xlinker "-)" -o $@
#	$(CC) $(INC_FLAG) $(LDFLAGS) $(COBJS) -Xlinker "-(" $(LIBS) -Xlinker "-)" -o $@

ifeq ($(DODEBUG),)
	$(STRIPTOOL) $(STRIP_FLAGS) $@
endif

clean-extra :
	- $(RM) $(LIBNAME) $(EXE) $(EXE).map
	- $(RM) *.o $(DS_LIBS)

include $(TOP_DIR)/Makerules
